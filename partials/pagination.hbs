{{! This template controls how the "page arrow" icons appear at the bottom of each sections that are not posts. }}

<ul class="pagination">
  {{#if prev}}
    <li class="waves-effect pagination-item newer"><a href="{{page_url prev}}"><i class="mdi-navigation-chevron-left"></i></a></li>
  {{else}}
    <li class="disabled pagination-item newer"><a href="#!"><i class="mdi-navigation-chevron-left"></i></a></li>
  {{/if}}
  {{#if next}}
    <li class="waves-effect pagination-item older"><a href="{{page_url next}}"><i class="mdi-navigation-chevron-right"></i></a></li>
  {{else}}
    <li class="disabled pagination-item older"><a href="#!"><i class="mdi-navigation-chevron-right"></i></a></li>
  {{/if}}
</ul>
